<?php

$VALIDATION_RULES = new stdClass();
{ // 部品コード
	$r_code = new stdClass();
	$r_code->type        = "regx";
	$r_code->pattern     = "/^[A-Z]{1}[0-9]{9}$/";
	$r_code->label       = "部品コード";
	$r_code->name        = "code";
	$r_code->isneed      = true;
	$r_code->error       = "部品コードはアルファベット1桁、半角数字9桁で入力してください";
	$r_code->form        = true;
	$VALIDATION_RULES->code = $r_code;
}
{ // 品名
    $r_name = new stdClass();
    $r_name->type        = "text";
    $r_name->label       = "品名";
    $r_name->name        = "name";
    $r_name->isneed      = false;
    $r_name->charMax     = 255;
    $r_name->charError   = "255文字以下で入力してください";
    $r_name->form        = true;
    $VALIDATION_RULES->name = $r_name;
}
{ // 材質
    $r_material = new stdClass();
    $r_material->type        = "text";
    $r_material->label       = "材質";
    $r_material->name        = "material";
    $r_material->isneed      = false;
    $r_material->charMax     = 255;
    $r_material->charError   = "255文字以下で入力してください";
    $r_material->form        = true;
    $VALIDATION_RULES->material = $r_material;
}
{ // 形式
    $r_model = new stdClass();
    $r_model->type        = "text";
    $r_model->label       = "形式";
    $r_model->name        = "model";
    $r_model->isneed      = false;
    $r_model->charMax     = 255;
    $r_model->charError   = "255文字以下で入力してください";
    $r_model->form        = true;
    $VALIDATION_RULES->model = $r_model;
}
{ // 実際単価
    $r_unit_price = new stdClass();
    $r_unit_price->type        = "float";
    $r_unit_price->label       = "実際単価";
    $r_unit_price->name        = "unit_price";
    $r_unit_price->isneed      = false;
    $r_unit_price->error       = "実際単価を数値入力してください";
    $r_unit_price->form        = true;
    $VALIDATION_RULES->unit_price = $r_unit_price;
}


?>