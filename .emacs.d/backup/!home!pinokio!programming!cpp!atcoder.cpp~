#include<iostream>
#include<cstdio>
#include<algorithm>

using namespace std;

/*
n
a1
..
an

n<100000
ai<1000000000

out: first, second
*/
typedef long long int ll;
ll n, p;


ll pow(ll x, ll n){
  if(n == 0) return 1;
  else return x * pow(x, n - 1);
}


int main(){
  cin >> n;
  cin >> p;

  int gcd = 1;
  for(int i = 2; i <= p; i++){
    if(p % pow(i, n) == 0){
      gcd *= i;
      p /= pow(i, n);
    }
  }
  cout << gcd << endl;

  return 0;
}

