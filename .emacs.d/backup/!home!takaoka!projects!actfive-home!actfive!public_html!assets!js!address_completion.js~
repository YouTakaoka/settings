  <script type="text/javascript">
      document.body.onload = function(){
          document.getElementById('zipcode').addEventListener("keyup", address_complete);
      }
              
      function address_complete(e){
          var code = document.getElementById("zipcode").value;
          var address = document.getElementById("address");
          const request = new XMLHttpRequest();
          <?php
            echo 'request.open("GET", "'.SITE_URL.'/postal?postal_code="+code);';
          ?>
          request.addEventListener("load", (event) => {
                  address.value = event.target.responseText;
              });
          request.send();
      }
   </script>
