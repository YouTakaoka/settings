CC=g++

IGNORE = -Wno-comment -Wunused-variable

CCFLAGS = -O2 -fopenmp -Wall -D"NDEBUG" -D"VISAGE_STATIC" -D"LINUX" 

#************************************
#***** PATH TO HEADERS AND LIBS *****
#************************************
VISAGE_DEPENDENCIES = ./dependencies
VISAGE_HEADERS  = ./include
VISAGE_SOURCE  = ./source

OPENCV_LIB_PATH = $(VISAGE_DEPENDENCIES)/OpenCV-Linux/lib
VISION_LIB_PATH = ./lib

#************************************
#***** LIB FOLDERS TO SEARCH ********
#************************************
LOCAL_LIB_PATHS = \
	-L$(OPENCV_LIB_PATH) \
	-L$(VISION_LIB_PATH)

#************************************
#***** LIB FILES ADDED  *************
#************************************
LOCAL_LIB_FILES = \
	-lVisageVision \
	-lVisageAnalyser \
	-lpthread \
	-lGL \
	-lGLU \
	-lOpenCV \
	-ljpeg \
	-lswscale \
	-lavformat \
	-lavutil \
	-lavcodec \
	-lcurses \
	-lgtk-x11-2.0 \
	-lgdk-x11-2.0 \
	-lgobject-2.0 \
	-lglib-2.0 \
	-ldl \
	-lz \
	-lpng12 \
	-ldc1394 \
	-lv4l1 \
	-lv4l2 \
	-lopenblas


#************************************
#***** H FILES INLCUDED  ************
#************************************
LOCAL_C_INCLUDES =  \
    -I$(VISAGE_HEADERS) \
	-I$(VISAGE_DEPENDENCIES)/OpenCV-Linux/include \
    -I$(VISAGE_DEPENDENCIES)/OpenCV-Linux/include/opencv

TRACKER_OUT = SimpleTracker
#************************************
#***** CPP FILES BUILT  *************
#************************************
SIMPLETRACKER_SOURCE_PATH = ./source

TRACKER_SRC_FILES = $(SIMPLETRACKER_SOURCE_PATH)/SimpleTracker.cpp $(SIMPLETRACKER_SOURCE_PATH)/VisageDrawing.cpp

default: buildTracker

buildTracker: 
	$(CC) $(CCFLAGS) $(IGNORE) $(LOCAL_LIB_PATHS) $(LOCAL_C_INCLUDES) $(TRACKER_SRC_FILES) $(LOCAL_LIB_FILES) -o "./bin/VisageHeadEmo"
