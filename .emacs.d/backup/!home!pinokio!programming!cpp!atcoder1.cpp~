#include<cstdio>
#include<cstring>
#define NMAX 2*100000

int main(){
  char s[NMAX];
  int l, black = 0;
  long int num = 0;
  fgets(s, NMAX, stdin);
  l = strlen(s) - 1;
  
  for(int i = 0; i < l - 1; i++){
    if(s[i] == 'B') {
      black++;
    }

    if(s[i] == 'B' && s[i+1] == 'W'){
      num += black;
      s[i+1] = 'B';
      black--;
    }
  }

  printf("%ld\n", num);
}
